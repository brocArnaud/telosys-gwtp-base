<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' ui:baseMessagesInterface="com.telosys.gwtp.base.client.resources.i18n.Messages" xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

	<ui:with field="res" type="com.telosys.gwtp.base.client.resources.AppResources" />
	<g:HTMLPanel>
		<b:Container>
			<g:HTMLPanel>
				<b:Row>
					<b:Column size="MD_4" offset="MD_4">
						<b:Panel addStyleNames="{res.style.formPanel}">
							<b:PanelHeader>
								<b:Heading size="H3" text="Creating a new customer">
									<ui:attribute name='text' key="customer.form.title" />
								</b:Heading>
							</b:PanelHeader>
							<b:PanelBody ui:field="body">
								<b:Form>
									<b:FieldSet>
										<b:FormGroup>
											<b:FormLabel for="code" text="Code" />
											<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
											<b:TextBox b:id="code" ui:field="code" />
										</b:FormGroup>
										<b:FormGroup>
											<b:FormLabel for="countryCode" text="Country code" />
											<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
											<b:ValueListBox b:id="countryCode" ui:field="countryCode" allowBlank="false" />
										</b:FormGroup>
										<b:FormGroup>
											<b:FormLabel for="firstName" text="First name" />
											<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
											<b:TextBox b:id="firstName" ui:field="firstName" />
										</b:FormGroup>
										<b:FormGroup>
											<b:FormLabel for="lastName" text="Last name" />
											<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
											<b:TextBox b:id="lastName" ui:field="lastName" />
										</b:FormGroup>
										<b:FormGroup>
											<b:FormLabel for="login" text="login" />
											<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
											<b:TextBox b:id="login" ui:field="login" />
										</b:FormGroup>
										<b:FormGroup>
											<b:FormLabel for="password" text="Password" />
											<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
											<b:TextBox b:id="password" ui:field="password" />
										</b:FormGroup>
										<b:FormGroup>
											<b:FormLabel for="age" text="Age" />
											<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
											<b:IntegerBox b:id="age" ui:field="age" />
										</b:FormGroup>
										<b:FormGroup>
											<b:FormLabel for="city" text="City" />
											<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
											<b:TextBox b:id="city" ui:field="city" />
										</b:FormGroup>
										<b:FormGroup>
											<b:FormLabel for="zipCode" text="Zip code" />
											<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
											<b:IntegerBox b:id="zipCode" ui:field="zipCode" />
										</b:FormGroup>
										<b:FormGroup>
											<b:FormLabel for="phone" text="phone" />
											<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
											<b:TextBox b:id="phone" ui:field="phone" />
										</b:FormGroup>
										<b:FormGroup>
											<b:FormLabel for="reviewer" text="Reviewer" />
											<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
											<b:CheckBox b:id="reviewer" ui:field="reviewer" />
										</b:FormGroup>
									</b:FieldSet>
								</b:Form>
							</b:PanelBody>
							<b:PanelFooter addStyleNames="{res.style.formPanelFooter}">
								<b:Button type="DANGER" ui:field="reset" text="Reset" />
								<b:Button type="PRIMARY" ui:field="create" text="Create" />
							</b:PanelFooter>
						</b:Panel>
					</b:Column>
					<b:Column ui:field="notification" size="MD_4" offset="MD_4" addStyleNames="{res.style.notificationContainer}" visible="false">
						<b:Label ui:field="labelNotification" text="Player creation succes" type="SUCCESS" />
					</b:Column>
					<b:Column ui:field="notificationError" size="MD_4" offset="MD_4" addStyleNames="{res.style.notificationContainer}" visible="false">
						<b:Label ui:field="labelNotificationError" text="Error" type="DANGER" />
					</b:Column>
				</b:Row>
			</g:HTMLPanel>
		</b:Container>
	</g:HTMLPanel>
</ui:UiBinder>