<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b2="urn:import:org.gwtbootstrap3.extras.datepicker.client.ui">

	<ui:with field="res" type="com.telosys.gwtp.base.client.resources.AppResources" />
	<g:HTMLPanel>
		<b:Container>
			<g:HTMLPanel>
				<b:Row>
					<b:Column size="MD_4" offset="MD_4">
						<b:Panel addStyleNames="{res.style.formPanel}">
							<b:PanelHeader>
								<b:Heading size="H3" text="Creating a new player" />
							</b:PanelHeader>
							<b:PanelBody ui:field="body">
								<b:Form>
									<b:FieldSet>
										<b:FormGroup>
											<b:FormLabel for="id" text="Id" />
											<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
											<b:IntegerBox b:id="id" ui:field="id" />
										</b:FormGroup>
										<b:FormGroup>
											<b:FormLabel for="name" text="Name" />
											<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
											<b:TextBox b:id="name" ui:field="name" />
										</b:FormGroup>
										<b:FormGroup>
											<b:FormLabel for="description" text="Description" />
											<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
											<b:TextBox b:id="description" ui:field="description" />
										</b:FormGroup>
										<b:FormGroup>
											<b:FormLabel for="creationDate" text="Creation date" />
											<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
											<b2:DatePicker b:id="creationDate" ui:field="creationDate" />
										</b:FormGroup>
									</b:FieldSet>
								</b:Form>
							</b:PanelBody>
							<b:PanelFooter addStyleNames="{res.style.formPanelFooter}">
								<b:Button type="DANGER" ui:field="reset" text="Reset" />
								<b:Button type="PRIMARY" ui:field="create" text="Create" />
							</b:PanelFooter>
						</b:Panel>
					</b:Column>
					<b:Column ui:field="notification" size="MD_4" offset="MD_4" addStyleNames="{res.style.notificationContainer}" visible="false">
						<b:Label ui:field="labelNotification" text="Player creation succes" type="SUCCESS" />
					</b:Column>
				</b:Row>
			</g:HTMLPanel>
		</b:Container>
	</g:HTMLPanel>
</ui:UiBinder>