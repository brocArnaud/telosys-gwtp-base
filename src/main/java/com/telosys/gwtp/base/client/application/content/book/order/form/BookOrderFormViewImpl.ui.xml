<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' 	ui:baseMessagesInterface="com.telosys.gwtp.base.client.resources.i18n.Messages" xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b2="urn:import:org.gwtbootstrap3.extras.datepicker.client.ui">

	<ui:with field="res" type="com.telosys.gwtp.base.client.resources.AppResources" />
	<g:HTMLPanel>
		<b:Container>
			<g:HTMLPanel>
				<b:Row>
					<b:Column size="MD_4" offset="MD_4">
						<b:Panel addStyleNames="{res.style.formPanel}">
							<b:PanelHeader>
								<b:Heading size="H3" text="Creating a new book order" >
									<ui:attribute name='text' key="book.order.form.title" />
								</b:Heading>
							</b:PanelHeader>
							<b:PanelBody ui:field="body">
								<b:Form>
									<b:FieldSet>
										<b:FormGroup>
											<b:FormLabel for="id" text="Id" />
											<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
											<b:IntegerBox b:id="id" ui:field="id" />
										</b:FormGroup>
										<b:FormGroup>
											<b:FormLabel for="shopCode" text="Shop" />
											<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
											<b:ValueListBox b:id="shopCode" ui:field="shopCode" allowBlank="false" />
										</b:FormGroup>
										<b:FormGroup>
											<b:FormLabel for="customerCode" text="Customer" />
											<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
											<b:ValueListBox b:id="customerCode" ui:field="customerCode" allowBlank="false" />
										</b:FormGroup>
										<b:FormGroup>
											<b:FormLabel for="employeeCode" text="Employee" />
											<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
											<b:ValueListBox b:id="employeeCode" ui:field="employeeCode" allowBlank="false" />
										</b:FormGroup>
										<b:FormGroup>
											<b:FormLabel for="date" text="Date" />
											<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
											<b2:DatePicker b:id="date" ui:field="date" />
										</b:FormGroup>
										<b:FormGroup>
											<b:FormLabel for="state" text="State" />
											<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
											<b:IntegerBox b:id="state" ui:field="state" />
										</b:FormGroup>
									</b:FieldSet>
								</b:Form>
							</b:PanelBody>
							<b:PanelFooter addStyleNames="{res.style.formPanelFooter}">
								<b:Button type="DANGER" ui:field="reset" text="Reset" />
								<b:Button type="PRIMARY" ui:field="create" text="Create" />
							</b:PanelFooter>
						</b:Panel>
					</b:Column>
					<b:Column ui:field="notification" size="MD_4" offset="MD_4" addStyleNames="{res.style.notificationContainer}" visible="false">
						<b:Label ui:field="labelNotification" text="Player creation succes" type="SUCCESS" />
					</b:Column>
					<b:Column ui:field="notificationError" size="MD_4" offset="MD_4" addStyleNames="{res.style.notificationContainer}" visible="false">
						<b:Label ui:field="labelNotificationError" text="Error" type="DANGER" />
					</b:Column>
				</b:Row>
			</g:HTMLPanel>
		</b:Container>
	</g:HTMLPanel>
</ui:UiBinder>