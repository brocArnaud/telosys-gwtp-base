<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b2="urn:import:org.gwtbootstrap3.extras.datepicker.client.ui">

	<ui:with field="res" type="com.telosys.gwtp.base.client.resources.AppResources" />
	<g:HTMLPanel>
		<b:Container>
			<g:HTMLPanel>
				<b:Row>
					<b:Column size="MD_4" offset="MD_4">
						<b:Panel addStyleNames="{res.style.formPanel}">
							<b:PanelHeader>
								<b:Heading size="H3" text="Creating a new player" />
							</b:PanelHeader>
							<b:PanelBody ui:field="body">
								<b:Form>
									<b:FieldSet>
										<b:FormGroup>
											<b:FormLabel for="customerCode" text="Customer code" />
											<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
											<b:TextBox b:id="customerCode" ui:field="customerCode" />
										</b:FormGroup>
										<b:FormGroup>
											<b:FormLabel for="bookId" text="Book id" />
											<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
											<b:IntegerBox b:id="bookId" ui:field="bookId" />
										</b:FormGroup>
										<b:FormGroup>
											<b:FormLabel for="reviewText" text="Review text" />
											<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
											<b:TextBox b:id="reviewText" ui:field="reviewText" />
										</b:FormGroup>
										<b:FormGroup>
											<b:FormLabel for="reviewNote" text="Review note" />
											<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
											<b:IntegerBox b:id="reviewNote" ui:field="reviewNote" />
										</b:FormGroup>
										<b:FormGroup>
											<b:FormLabel for="creation" text="Creation date" />
											<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
											<b2:DatePicker b:id="creation" ui:field="creation" />
										</b:FormGroup>
										<b:FormGroup>
											<b:FormLabel for="lastUpdate" text="last update date" />
											<b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
											<b2:DatePicker b:id="lastUpdate" ui:field="lastUpdate" />
										</b:FormGroup>
									</b:FieldSet>
								</b:Form>
							</b:PanelBody>
							<b:PanelFooter addStyleNames="{res.style.formPanelFooter}">
								<b:Button type="DANGER" ui:field="reset" text="Reset" />
								<b:Button type="PRIMARY" ui:field="create" text="Create" />
							</b:PanelFooter>
						</b:Panel>
					</b:Column>
					<b:Column ui:field="notification" size="MD_4" offset="MD_4" addStyleNames="{res.style.notificationContainer}" visible="false">
						<b:Label ui:field="labelNotification" text="Player creation succes" type="SUCCESS" />
					</b:Column>
				</b:Row>
			</g:HTMLPanel>
		</b:Container>
	</g:HTMLPanel>
</ui:UiBinder>